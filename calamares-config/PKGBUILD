# Maintainer: Aditya Shakya <adi1090x@gmail.com>

pkgname=calamares-config
pkgver=1.0
pkgrel=1
pkgdesc="Calamares configuration for ArchLan."
url="https://github.com/archlan/core"
arch=('any')
license=('GPL')
provides=($pkgname)
conflicts=($pkgname)
depends=()

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	# copy all files recursively in /etc/calamares
	(find calamares -type f -exec install -Dm 644 "{}" "$pkgdir/etc/{}" \;)
	# make scripts executable
	chmod 755 "$pkgdir"/etc/calamares/launch.sh
	chmod 755 "$pkgdir"/etc/calamares/branding/archlan/test-slides.sh
}






